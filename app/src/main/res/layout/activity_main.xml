<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.tlz.indexrecyclerview.IndexRecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:index_bar_background="#00000000"
        app:index_bar_layout_mode="center"
        app:index_bar_text_color = "#9E9E9E"
        app:index_bar_selected_text_color="#333333"
        app:index_bar_text_size = "11sp"
        app:index_bar_auto_dismiss = "false"
        app:index_bar_preview_text_color="#00000000"
        app:index_bar_preview_rect_background = "#00000000"
        />

</androidx.constraintlayout.widget.ConstraintLayout>